<!DOCTYPE html>
<html>
<head>
<style> 
input[type=text] {
  width: 100%;
  padding: 12px 20px;
  margin: 8px 0;
  box-sizing: border-box;
  border: 2px solid red;
  border-radius: 4px;
}
</style>
</head>

@model tuwaiq_sec.Models.Hotel

<h2>Edit Hotel</h2>

<form method="post" asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name">First Name</label>
        <input class="form-control" asp-for="Name" />
    </div>

    <div class="form-group">
        <label asp-for="Address">Last Name</label>
        <input class="form-control" asp-for="Address" />
    </div>

    <div class="form-group">
        <label asp-for="City">City</label>
        <input class="form-control" asp-for="City" />
    </div>

    <div class="form-group">
        <label asp-for="Country">Country</label>
        <input class="form-control" asp-for="Country" />
    </div>

    <div class="form-group">
        <label asp-for="Images">Images</label>
        <input class="form-control" asp-for="Images" />
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>

