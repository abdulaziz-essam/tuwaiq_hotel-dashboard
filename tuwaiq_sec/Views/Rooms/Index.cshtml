@model List<Room>

<body dir="rtl">
    <div class="container">
        <div class="row justify-content-center">
            @foreach (var room in Model)
            {
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="@Url.Content("~/images/" + room.Image)" class="img-fluid rounded-start" alt="Room Image">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">@room.Type</h5>
                                <p class="card-text">@room.Price</p>
                                <p class="card-text">
                                    <a href="/RoomsDetails/@room.Id">تفاصيل</a>
                                    <br>
                                    <a href="/RoomDetails/create">اضافة تفاصيل للغرفة</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>