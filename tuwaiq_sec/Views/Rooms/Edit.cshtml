<!DOCTYPE html>
<html>
<head>
    <style>
        input[type=text] {
            width: 100%;
            padding: 12px 20px;
            margin: 8px 0;
            box-sizing: border-box;
            border: 2px solid red;
            border-radius: 4px;
        }
    </style>
</head>

@model tuwaiq_sec.Models.Room

<h2>Edit Hotel</h2>

<form method="post" asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Type">نوع الغرفة </label>
        <input class="form-control" asp-for="Type" />
    </div>

    <div class="form-group">
        <label asp-for="Price">السعر </label>
        <input class="form-control" asp-for="Price" />
    </div>

    <div class="form-group">
        <label asp-for="Image">صورة</label>
        <input type="file" class="form-control" asp-for="Image" />
    </div>




    <div class="form-group">
        <label asp-for="RoomNo">رقم الغرفة</label>
        <input class="form-control" asp-for="RoomNo" />
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>

